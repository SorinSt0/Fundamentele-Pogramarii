    Console.Write($"Numărul {i}: ");
    int curent = Convert.ToInt32(Console.ReadLine());

    int directieCurenta = 0;
    if (curent > anterior) directieCurenta = 1;
    else if (curent < anterior) directieCurenta = -1;

    if (directieCurenta != 0 && directieAnterioara != 0 && directieCurenta != directieAnterioara)
    {
        schimbariDirectie++;
    }

    if (directieCurenta != 0) directieAnterioara = directieCurenta;
    anterior = curent;
}
int directieFinala = 0;
if (primul > anterior) directieFinala = 1;
else if (primul < anterior) directieFinala = -1;

if (directieFinala != 0 && directieAnterioara != 0 && directieFinala != directieAnterioara)
{
    schimbariDirectie++;
}

if (schimbariDirectie == 2)
{
    Console.WriteLine("DA");
}
else
{
    Console.WriteLine(schimbariDirectie == 0 ? "DA" : "NU");
}*/

